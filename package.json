{
  "name": "mosaic-facefilter",
  "version": "1.0.0",
  "description": "Real-time Minecraft-style mosaic face filter for OBS streaming.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "keywords": ["obs", "filter", "face", "mosaic", "streaming"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "@mediapipe/face_detection": "^0.4.0",
    "@mediapipe/tasks-vision": "^0.10.0"
  },
  "build": {
    "appId": "com.mosaic.facefilter",
    "productName": "Mosaic Face Filter",
    "mac": {
      "category": "public.app-category.video",
      "target": ["dmg"]
    },
    "win": {
      "target": ["nsis"]
    }
  }
}
